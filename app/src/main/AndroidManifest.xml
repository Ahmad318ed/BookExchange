<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookExchange"
        tools:targetApi="31">
        <activity
            android:name=".ui.activites.CollageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activites.EditableProfile"
            android:exported="true"></activity>
        <activity
            android:name=".ui.activites.CreatePostActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activites.CreateRequestActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activites.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activites.Profile"
            android:exported="true" />
        <activity
            android:name=".ui.activites.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activites.ViewPostActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activites.ViewRequestActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activites.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activites.LoginActivity"
            android:exported="true"></activity>
    </application>

</manifest>